<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="mysql">
        <!-- 添加实体映射 -->
        <class>org.movie.entity.Admin</class>
        <class>org.movie.entity.User</class>
        <class>org.movie.entity.MovieType</class>
        <class>org.movie.entity.MovieDate</class>
        <class>org.movie.entity.MovieLanguage</class>
        <class>org.movie.entity.MovieArea</class>
        <class>org.movie.entity.Movie</class>
        <class>org.movie.entity.Cinema</class>
        <class>org.movie.entity.MovieHall</class>
        <class>org.movie.entity.Showing</class>
        <class>org.movie.entity.Comment</class>
        <class>org.movie.entity.MovieSession</class>
        <class>org.movie.entity.OrderItem</class>
        <class>org.movie.entity.Order</class>

        <!-- 配置Hibernate属性 -->
        <properties>

            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
            <property name="hibernate.connection.password" value="root" />
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/movie?useUnicode=true&amp;characterEncoding=UTF-8" />
            <property name="hibernate.connection.username" value="root" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />

            <property name="hibernate.hbm2ddl.auto" value="update"/>

        </properties>

    </persistence-unit>

</persistence>
